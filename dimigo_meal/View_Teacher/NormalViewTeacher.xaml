<Page x:Class="dimigo_meal.View.NormalViewTeacher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" >

    <Page.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
    </Page.Resources>
    <Grid Width="800">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="30,20,35,30">
            <Button Style="{StaticResource ResourceKey=TeacherNewButton}" x:Name="btn_CheckTeacherMeal" FontSize="20" Width="272" Height="288" Margin="60" Click="btn_CheckTeacherMeal_Click"/>
            <Button  Style="{StaticResource ResourceKey=StudentNewButton}" x:Name="btn_AddNewStudentMeal" FontSize="20" Width="272" Height="288" Margin="60" Click="btn_AddNewStudentMeal_Click"/>
        </StackPanel>
    </Grid>
</Page>
