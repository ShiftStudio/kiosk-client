<Window x:Class="dimigo_meal.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:view="clr-namespace:dimigo_meal.View"
        xmlns:vt="clr-namespace:dimigo_meal.ViewTamplate"
        xmlns:common="clr-namespace:dimigo_meal.Common"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance view:MainWindowViewModel, IsDesignTimeCreatable=True}"
        WindowStyle="None"
        ResizeMode="NoResize"
        Left="0" Top="0"
        Width="1080" Height="1920" WindowStartupLocation="Manual" Closing="Window_Closing">
    <DockPanel>
        <Grid x:Name="VideoContainer" DockPanel.Dock="Top" Background="Black">
            <common:MyVideoPlayer x:Name="MainVideoPlayer" Height="608" Margin="0,0,0,0"/>
        </Grid>

        <Grid DockPanel.Dock="Bottom" Margin="0">
            <Grid.Background>
                <ImageBrush x:Name="Background" ImageSource="/dimigo_meal;component/Assets/Resources/new/s/background_static.png" Stretch="None" AlignmentX="Left" AlignmentY="Top"/>
            </Grid.Background>

            <DockPanel x:Name="Wrapper" Margin="64,48,64,0">
                <StackPanel x:Name="Header" DockPanel.Dock="Top">
                    <vt:MealHeader Margin="0,0,0,52"/>
                    <StackPanel x:Name="MainHeader">
                        <vt:MealContainer1 x:Name="SubHeader1" Margin="54,55"/>
                        <StackPanel>
                            <Rectangle x:Name="l1" Height="2px" Margin="0,0,0,40" Fill="{common:BindingEx Binding={Binding Path=App.KioskViewMode, Mode=OneWay}, ConvertMethod=LineColorConverter}"/>
                            <vt:MealContainer2 x:Name="SubHeader2" Margin="54,15,54,15"/>
                            <vt:MealContainer3 x:Name="SubHeader3" Margin="54,15,54,15"/>
                            <Rectangle x:Name="l2" Height="2px" Margin="0,40,0,0" Fill="{common:BindingEx ConvertMethod=LineColorConverter}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <Grid DockPanel.Dock="Bottom">
                    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50"/>
                </Grid>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>